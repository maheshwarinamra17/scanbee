<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/midbig_icon"
            android:layout_height="@dimen/midbig_icon"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/invoice"/>

        <TextView
            android:id="@+id/amount_paidin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginTop="@dimen/side_margin"
            android:textSize="@dimen/head_title"
            android:gravity="center_horizontal"
            android:textColor="@color/app_color"/>
        <TextView
            android:id="@+id/amountPaidInTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_paid"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/body_title"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/orderIdIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_item_margin"
            android:text="SBO785"
            android:textSize="@dimen/head_title"
            android:textColor="@color/app_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/OrderIdInTxt"
            android:text="@string/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/body_title"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/side_margin">
        <TextView
            android:id="@+id/circleImgTv"
            android:layout_width="@dimen/circle_icon"
            android:layout_height="@dimen/circle_icon"
            android:text="J"
            android:textSize="@dimen/icon_text"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/circle"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/circle_icon"
            android:layout_marginLeft="@dimen/elem_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cust_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joey Barnes"
                android:textSize="@dimen/body_title"
                android:textColor="@color/app_color"/>
            <TextView
                android:id="@+id/typeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_caption"
                android:layout_marginTop="@dimen/body_margin"
                android:text="Customer, 9391734766"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/printInvoiceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/print_invoice"
            android:textAllCaps="true"
            android:textSize="@dimen/button_text"
            android:background="@drawable/button_blue_color"
            android:layout_marginTop="@dimen/side_margin"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/shareInvoiceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_invoice"
            android:layout_marginTop="@dimen/row_item_margin"
            android:textAllCaps="true"
            android:textSize="@dimen/button_text"
            android:background="@drawable/button_app_color"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>