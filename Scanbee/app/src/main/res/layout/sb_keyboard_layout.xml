<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        app:cardElevation="4dp" >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/keyline_0"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:src="@drawable/img_red_circle"
                    android:padding="14dp"
                    android:id="@+id/textViewRed"
                    android:background="@drawable/sb_grey_hollow_button"
                    android:layout_weight="0.25" />

                <ImageView
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:src="@drawable/img_green_circle"
                    android:padding="14dp"
                    android:id="@+id/textViewGreen"
                    android:background="@drawable/sb_grey_hollow_button"
                    android:layout_weight="0.25" />

                <ImageView
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:src="@drawable/img_blue_circle"
                    android:padding="14dp"
                    android:id="@+id/textViewBlue"
                    android:background="@drawable/sb_grey_hollow_button"
                    android:layout_weight="0.25" />

                <ImageView
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:src="@drawable/img_yellow_circle"
                    android:padding="14dp"
                    android:id="@+id/textViewYellow"
                    android:background="@drawable/sb_grey_hollow_button"
                    android:layout_weight="0.25" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/key_line_12"
                android:layout_below="@id/keyline_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/keyline_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="7"
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:id="@+id/textView7"
                        android:background="@drawable/sb_numpad_button"
                        android:layout_weight="0.25" />
                    <TextView
                        android:text="8"
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:background="@drawable/sb_numpad_button"
                        android:id="@+id/textView8"
                        android:layout_weight="0.25" />
                    <TextView
                        android:text="9"
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:background="@drawable/sb_numpad_button"
                        android:id="@+id/textView9"
                        android:layout_weight="0.25" />
                    <TextView
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:visibility="invisible"
                        android:layout_weight="0.25" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/keyline_2"
                    android:orientation="horizontal"
                    android:layout_below="@id/keyline_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="4"
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:id="@+id/textView4"
                        android:background="@drawable/sb_numpad_button"
                        android:layout_weight="0.25" />
                    <TextView
                        android:text="5"
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:background="@drawable/sb_numpad_button"
                        android:id="@+id/textView5"
                        android:layout_weight="0.25" />
                    <TextView
                        android:text="6"
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:background="@drawable/sb_numpad_button"
                        android:id="@+id/textView6"
                        android:layout_weight="0.25" />
                    <TextView
                        android:layout_width="@dimen/key_width"
                        android:layout_height="@dimen/key_height"
                        android:layout_margin="@dimen/space_1x"
                        android:gravity="center"
                        android:textSize="@dimen/font_key"
                        android:visibility="invisible"
                        android:layout_weight="0.25" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/big_key_width"
                    android:layout_height="@dimen/big_key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:src="@drawable/img_enter"
                    android:padding="14dp"
                    android:id="@+id/textViewClear"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_below="@id/key_line_12"
                android:layout_height="wrap_content">

                <TextView
                    android:text="1"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:textSize="@dimen/font_key"
                    android:id="@+id/textView1"
                    android:background="@drawable/sb_numpad_button"
                    android:layout_weight="0.25" />
                <TextView
                    android:text="2"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:textSize="@dimen/font_key"
                    android:background="@drawable/sb_numpad_button"
                    android:id="@+id/textView2"
                    android:layout_weight="0.25" />
                <TextView
                    android:text="3"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:textSize="@dimen/font_key"
                    android:background="@drawable/sb_numpad_button"
                    android:id="@+id/textView3"
                    android:layout_weight="0.25" />
                <TextView
                    android:text="0"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_height"
                    android:layout_margin="@dimen/space_1x"
                    android:gravity="center"
                    android:textSize="@dimen/font_key"
                    android:background="@drawable/sb_numpad_button"
                    android:id="@+id/textView0"
                    android:layout_weight="0.25" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>