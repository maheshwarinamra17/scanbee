<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/photo_back"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/row_margin"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/nav_head_icon_size"
        android:layout_height="@dimen/nav_head_icon_size"
        android:layout_marginTop="@dimen/nav_header_icon_spacing"
        android:src="@drawable/sb_icon"
        android:id="@+id/navImageView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/row_item_margin"
        android:layout_marginTop="@dimen/nav_header_icon_spacing"
        android:layout_marginRight="@dimen/elem_margin"
        android:paddingBottom="@dimen/body_margin"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/storenametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/body_title"
                android:text="Axe Product Store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bobby@axelrod.com"
                android:layout_marginTop="@dimen/body_margin"
                android:textColor="@color/app_green"
                android:textSize="@dimen/body_caption"
                android:id="@+id/userstoretv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white">
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/carret_icon_size"
        android:layout_height="@dimen/carret_icon_size"
        android:layout_marginTop="@dimen/nav_header_icon_spacing"
        android:padding="@dimen/logout_padding"
        android:src="@drawable/caret"
        android:id="@+id/logoutBtn" />

</LinearLayout>
