<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_toast"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/row_item_margin"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/toast_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/body_margin"
            android:layout_marginRight="@dimen/body_margin"
            android:gravity="center|left"
            android:text="Hola, Imma toast"
            android:textColor="@color/white"
            android:textSize="@dimen/body_title" />

    </LinearLayout>

</LinearLayout>