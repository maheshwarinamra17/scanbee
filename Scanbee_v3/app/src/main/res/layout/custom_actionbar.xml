<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:gravity="center"
    android:background="@color/sb_white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:background="@color/sb_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/custom_menu_btn"
                android:src="@drawable/img_menu"
                android:padding="@dimen/icon_padding"
                android:contentDescription="Menu btn"
                android:paddingLeft="0dp"
                android:layout_width="@dimen/icon_size_error_corrected"
                android:layout_height="@dimen/icon_size_error_corrected" />


            <TextView
                android:text="Custom title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:letterSpacing="0.2"
                android:textSize="@dimen/font_sm_heading"
                android:textColor="@color/sb_black"
                android:id="@+id/custom_title" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:background="@drawable/sb_drop_shadow"/>

</LinearLayout>